<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/eNaslovna"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/eNaziv"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/eNaslovna"
        android:layout_marginLeft="4dp" />


    <TextView
        android:id="@+id/eAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eNaziv"
        android:layout_toRightOf="@id/eNaslovna"
        android:layout_alignLeft="@id/eNaziv"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/eDatumObjavljivanja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eAutor"
        android:layout_toRightOf="@id/eNaslovna"
        android:layout_alignLeft="@id/eNaziv"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/eBrojStranica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eDatumObjavljivanja"
        android:layout_toRightOf="@id/eNaslovna"
        android:layout_alignLeft="@id/eNaziv"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/eOpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eBrojStranica"
        android:layout_toRightOf="@id/eNaslovna"
        android:layout_alignLeft="@id/eNaziv"
        android:textSize="15sp" />

    <Button
        android:id="@+id/dPreporuci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eOpis"
        android:layout_toRightOf="@+id/eNaslovna"
        android:layout_alignLeft="@id/eNaziv"
        android:text="@string/preporuci" />




</RelativeLayout>
